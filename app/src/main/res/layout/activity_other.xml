<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_view"
    tools:context="com.abdulaziz.egytronica.ui.other_section.OtherActivity">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/other_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/cardview_dark_background"
        app:itemBackground="@color/cardview_dark_background"
        app:itemIconTint="@drawable/nav_item_selector"
        app:itemTextColor="@drawable/nav_item_selector"
        app:menu="@menu/bottom_navigation_menu" />

    <android.support.v4.view.ViewPager
        android:id="@+id/other_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/other_bottom_navigation">

    </android.support.v4.view.ViewPager>

</RelativeLayout>